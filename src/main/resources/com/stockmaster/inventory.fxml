<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stockmaster.InventoryController">
  <HBox>
    <Label fx:id="headerNameLabel" styleClass="text-lg-label" stylesheets="@styles.css" text="Name">
   </Label>
    <Label fx:id="headerQuantityLabel" styleClass="text-lg-label" stylesheets="@styles.css" text="Quantity">
         </Label>
    <Label fx:id="headerSellingPriceLabel" styleClass="text-lg-label" stylesheets="@styles.css" text="Selling Price">
         </Label>
    <Label fx:id="headerVendorLabel" styleClass="text-lg-label" stylesheets="@styles.css" text="Vendor">
         </Label>
  </HBox>
  <ListView fx:id="itemListView" fixedCellSize="40.0" styleClass="item-list-view" stylesheets="@styles.css" VBox.vgrow="ALWAYS" />
   <padding>
      <Insets left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
