<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stockmaster.InventoryController">
   <HBox alignment="CENTER" prefHeight="40.0">
      <children>
         <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0">
            <children>
               <Label text="Category">
                  <font>
                     <Font size="13.0" />
                  </font>
               </Label>
               <ComboBox fx:id="categoryDropdown" prefWidth="250.0" styleClass="other-txt-field" stylesheets="@styles.css">
                  <items>
                     <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Fruits &amp; Vegetables" />
                        <String fx:value="Bakery" />
                        <String fx:value="Dairy" />
                        <!-- Add more categories as needed -->
                     </FXCollections>
                  </items>
               </ComboBox>
            </children>
         </HBox>
         <Pane HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets left="10.0" right="10.0" />
            </HBox.margin>
         </Pane>
         <HBox alignment="CENTER_RIGHT" prefHeight="40.0" spacing="10.0">
            <children>
               <Button fx:id="addItemBtn" alignment="CENTER_RIGHT" mnemonicParsing="false" styleClass="btn" stylesheets="@styles.css" text="Add" textFill="WHITE" />
               <Button fx:id="removeItemBtn" alignment="CENTER_RIGHT" layoutX="10.0" layoutY="12.0" mnemonicParsing="false" styleClass="remove-btn" stylesheets="@styles.css" text="Remove" textFill="WHITE" />
            </children>
         </HBox>
      </children>
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
   </HBox>
   <HBox>
      <Label fx:id="headerNameLabel" styleClass="text-lg-label" stylesheets="@styles.css" text="Name">
      </Label>
      <Label fx:id="headerQuantityLabel" styleClass="text-lg-label" stylesheets="@styles.css" text="Quantity">
      </Label>
      <Label fx:id="headerSellingPriceLabel" styleClass="text-lg-label" stylesheets="@styles.css" text="Selling Price">
      </Label>
      <Label fx:id="headerVendorLabel" styleClass="text-lg-label" stylesheets="@styles.css" text="Vendor">
      </Label>
   </HBox>
   <ListView fx:id="itemListView" fixedCellSize="40.0" styleClass="item-list-view" stylesheets="@styles.css" VBox.vgrow="ALWAYS" />
   <padding>
      <Insets left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
