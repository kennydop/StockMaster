<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stockmaster.CustomersController">

  <HBox alignment="CENTER_RIGHT" prefHeight="40.0" spacing="10.0">
    <children>
      <Button fx:id="addCustomerBtn" alignment="CENTER_RIGHT" mnemonicParsing="false" styleClass="btn" stylesheets="@styles.css" text="Add" textFill="WHITE" />
      <Button fx:id="removeCustomerBtn" alignment="CENTER_RIGHT" layoutX="10.0" layoutY="12.0" mnemonicParsing="false" styleClass="remove-btn" stylesheets="@styles.css" text="Remove" textFill="WHITE" />
    </children>
    <VBox.margin>
      <Insets bottom="20.0" />
    </VBox.margin>
  </HBox>
  <TableView fx:id="customersTableView" styleClass="item-table-view" stylesheets="@styles.css" VBox.vgrow="ALWAYS">
    <columns>
      <TableColumn fx:id="customerNameColumn" editable="false" resizable="false" sortable="false" text="Name" />
      <TableColumn fx:id="customerTypeColumn" editable="false" resizable="false" sortable="false" text="Type" />
      <TableColumn fx:id="customerPhoneColumn" editable="false" resizable="false" sortable="false" text="Phone" />
      <TableColumn fx:id="customerAddressColumn" editable="false" resizable="false" sortable="false" text="Address" />
      <TableColumn fx:id="customerEmailColumn" editable="false" resizable="false" sortable="false" text="Email" />
    </columns>
  </TableView>
  <padding>
    <Insets left="20.0" right="20.0" top="20.0" />
  </padding>
</VBox>
